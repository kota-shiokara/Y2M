{
    "name": "Youtube Music Mover",
    "short_name": "Y2M",
    "version": "0.1.0",
    "description": "Youtube Music Mover",
	"permissions": [
        "tabs",
        "activeTab",
        "scripting"
	],
    "host_permissions": [
        "http://*/*",
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
    ],
	"action": {
        "default_title": "Y2M",
        "default_icon": {
            "16": "images/icon16.png"
        },
        "name": "Y2M"
    },
    "background": {
        "service_worker": "y2m.js"
    },
    "author": "Ikanoshiokara",
    "manifest_version": 3
}