{
    "name": "Youtube Music Mover",
    "short_name": "Y2M",
    "version": "0.2.0",
    "description": "Youtube Music Mover",
	"permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "notifications"
	],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
    ],
	"action": {
        "default_title": "Y2M",
        "default_icon": "images/y2m_icon128.png",
        "name": "Y2M"
    },
    "icons": {
        "16": "images/y2m_icon16.png",
        "32": "images/y2m_icon32.png",
        "48": "images/y2m_icon48.png",
        "128": "images/y2m_icon128.png"
    },
    "background": {
        "service_worker": "y2m.js"
    },
    "author": "Ikanoshiokara",
    "manifest_version": 3
}